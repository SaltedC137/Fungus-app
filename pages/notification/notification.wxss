/* notification.wxss */
.container {
  padding: 0;
  background: #f6f6f6;
  min-height: 100vh;
  padding-top: 90rpx; /* 为固定定位的tab-container留出空间 */
  width: 100%;
}

/* 标签栏样式 */
.tab-container {
  position: fixed;
  background: #fff;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 全部已读按钮样式 */
.mark-all-read {
  padding: 10rpx 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #1296db;
  border: 1rpx solid #1296db;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mark-all-btn-read{
  padding: 10rpx 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #424d53;
  border: 1rpx solid #7a919e;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mark-all-read:active {
  background-color: rgba(18, 150, 219, 0.1);
}

.tab-bar {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  width: 80%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 0.5em;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  transform: translateX(-85%);
  width: 10%;
  height: 4rpx;
  background: #1296db;
  border-radius: 3rpx;
  transition: all 0.3s;
}

/* 通知列表样式 */
.notification-list {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.notification-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s;
}

.notification-item.read {
  opacity: 0.8;
}

.notification-item.read::before {
  display: none;
}

.notification-item::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

.notification-content {
  display: flex;
}

.notification-type {
  min-width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 20rpx;
  color: #fff;
}

.notification-type.system {
  background: #1296db;
}

.notification-type.activity {
  background: #ff9500;
}

.notification-info {
  flex: 1;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #333;
}

.notification-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.notification-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  font-size: 26rpx;
  color: #1296db;
  padding: 6rpx 20rpx;
  border: 1rpx solid #1296db;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.action-btn:active {
  background: rgba(18, 150, 219, 0.1);
}

/* 空列表样式 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background: #eee;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 