/* notification.wxss */
.container {
  padding: 0;
  background: #f6f6f6;
  padding-top: 90rpx; /* 为固定定位的tab-container留出空间 */
  width: 100%;
}

/* 登录提示样式 */
.login-tip {
  background: #fff8e1;
  padding: 12rpx 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #ff9800;
  margin-bottom: 10rpx; /* 从20rpx减少到10rpx */
}

/* 标签栏样式 */
.tab-container {
  position: fixed;
  background: #fff;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 全部已读按钮样式 */
.mark-all-read {
  padding: 10rpx 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #1296db;
  border: 1rpx solid #1296db;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mark-all-btn-read{
  padding: 10rpx 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #424d53;
  border: 1rpx solid #7a919e;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mark-all-read:active {
  background-color: rgba(18, 150, 219, 0.1);
}

.tab-bar {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  width: 80%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 0.5em;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  transform: translateX(-85%);
  width: 10%;
  height: 4rpx;
  background: #1296db;
  border-radius: 3rpx;
  transition: all 0.3s;
}

/* 通知列表样式 */
.notification-list {
  padding: 10rpx 20rpx 20rpx; /* 减少顶部内边距 */
  width: 100%;
  box-sizing: border-box;
}

.notification-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s;
}

.notification-item.read {
  opacity: 0.8;
}

.notification-item.read::before {
  display: none;
}

.notification-item::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

.notification-content {
  display: flex;
}

.notification-type {
  min-width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 20rpx;
  color: #fff;
}

.notification-type.system {
  background: #1296db;
}

.notification-type.activity {
  background: #ff9500;
}

.notification-info {
  flex: 1;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #333;
}

.notification-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  word-break: break-all; /* 允许在任意字符间断行 */
  white-space: pre-wrap; /* 保留换行符和空格，允许换行 */
  display: -webkit-box;
  -webkit-line-clamp: 3; /* 最多显示3行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.notification-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  font-size: 26rpx;
  color: #1296db;
  padding: 6rpx 20rpx;
  border: 1rpx solid #1296db;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.action-btn:active {
  background: rgba(18, 150, 219, 0.1);
}

/* 空列表样式 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background: #eee;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 消息详情弹窗样式 */
.detail-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.detail-popup-content {
  position: relative;
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  z-index: 101;
  display: flex;
  flex-direction: column;
  max-height: 80%;
}

.detail-popup-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-popup-type {
  min-width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  padding: 0 16rpx;
}

.detail-popup-type.system {
  background: #1296db;
}

.detail-popup-type.activity {
  background: #ff9500;
}

.detail-popup-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.detail-popup-close:active {
  background: #f5f5f5;
}

.detail-popup-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 24rpx 24rpx 12rpx;
  color: #333;
}

.detail-popup-time {
  font-size: 24rpx;
  color: #999;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-popup-body {
  padding: 24rpx;
  flex: 1;
  max-height: 60vh;
}

.detail-popup-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  word-break: break-all;
  white-space: pre-wrap;
} 