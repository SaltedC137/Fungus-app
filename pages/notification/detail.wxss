/* notification/detail.wxss */
.container {
  padding: 20rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 错误提示 */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.error-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}

.error-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.error-btn {
  margin-top: 30rpx;
  padding: 16rpx 40rpx;
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 通知详情 */
.notification-detail {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notification-type {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #fff;
}

.notification-type.system {
  background-color: #3498db;
}

.notification-type.activity {
  background-color: #2ecc71;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.notification-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.notification-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  margin-top: 30rpx;
  white-space: pre-wrap; /* 保留换行符和空格，允许换行 */
  word-break: break-all; /* 允许在任意字符间断行 */
  text-align: justify; /* 两端对齐 */
} 