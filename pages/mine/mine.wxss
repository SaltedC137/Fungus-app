/* mine.wxss */

.container {
  padding: 0 0 40rpx;
}

/* 用户信息区域 */
.user-info-section {
  background: #1296db;
  padding: 40rpx;
  color: #fff;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-info-wrapper {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
  position: relative;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  background-color: transparent;
}

.avatar-wrapper::after {
  border: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.edit-avatar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  line-height: 40rpx;
  width: 100%;
}

.user-detail {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.welcome-text {
  font-size: 28rpx;
  opacity: 0.8;
}

.login-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #1296db;
  background-color: #fff;
  border-radius: 35rpx;
  display: inline-block;
}

.phone-section {
  margin-top: 20rpx;
}

.phone-number {
  font-size: 26rpx;
  opacity: 0.9;
}

.phone-btn {
  margin: 0;
  padding: 0 20rpx;
  height: 60rpx;
  width: 20%;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #1296db;
  background-color: #fff;
  border-radius: 30rpx;
  display: inline-block;
}

.user-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.info-value {
  font-size: 26rpx;
  color: #fff;
}

/* 状态信息区域 */
.status-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin: 30rpx;
  width: 95%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 40rpx;
  position: relative;
}

.stuff {
  background-color: #ffefd5;
  color: #ff9500;
}

.welcome-icon {
  background-color: #e6f7ff;
  color: #1296db;
}

.verified-icon {
  background-color: #e6fff2;
  color: #09bb07;
}

.unverified-icon {
  background-color: #fff1f0;
  color: #ff3b30;
}

.status-number {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff3b30;
  color: #fff;
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

/* 测试按钮 - 隐藏 */
.test-button {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 20rpx;
  color: #ccc;
  padding: 10rpx;
}

/* 菜单区域 */
.menu-section {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.logout-icon {
  color: #ff3b30;
}

.menu-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
} 