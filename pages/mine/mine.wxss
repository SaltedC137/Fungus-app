/* mine.wxss */
.container {
  padding: 0;
  font-size: 14px;
  color: #333;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 用户信息区域样式 */
.user-info-section {
  width: 100%;
  background: linear-gradient(to right, #1296db, #36c6d3);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.2);
  position: relative;
  overflow: visible;
  padding: 40rpx 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.user-info-section::after {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  right: -100rpx;
  bottom: -100rpx;
}

.user-info-section::before {
  content: '';
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  left: 50rpx;
  top: -50rpx;
}

.user-info-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 1;
}

.avatar-container {
  margin-right: 30rpx;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-right: 20rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.user-role {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 6rpx;
}

.user-group {
  font-size: 26rpx;
  opacity: 0.8;
}

.login-btn {
  background: transparent;
  border: 1px solid #fff;
  color: #fff;
  font-size: 14px;
  padding: 8rpx 30rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.login-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

/* 状态信息区域样式 */
.status-section {
  display: flex;
  justify-content: space-between;
  width: calc(100% - 60rpx);
  margin: -30rpx auto 20rpx;
  padding: 20rpx 0;
  border-radius: 15rpx;
  background: #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.status-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  position: relative;
}

.status-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: #f0f0f0;
}

.status-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 10rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.welcome-icon {
  background-color: #ffb74d;
  color: white;
}

.verified-icon {
  background-color: #4caf50;
  color: white;
}

.unverified-icon {
  background-color: #f44336;
  color: white;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单区域样式 */
.menu-section {
  margin: 20rpx 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
  transition: background 0.3s;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #f0f7ff;
  color: #1296db;
}

/* 图标样式 */
.menu-icon.icon-profile::before {
  content: "\e60c"; /* 使用字体图标，需要引入对应的字体文件 */
}

.menu-icon.icon-course::before {
  content: "\e612";
}

.menu-icon.icon-score::before {
  content: "\e613";
}

.menu-icon.icon-settings::before {
  content: "\e60f";
}

.menu-icon.icon-help::before {
  content: "\e611";
}

.menu-icon.icon-about::before {
  content: "\e610";
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
  margin-right: 10rpx;
  transition: transform 0.3s;
}

.menu-item:active .menu-arrow {
  transform: rotate(45deg) translateX(4rpx);
}

/* 测试按钮样式 */
.test-button {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin: 10rpx auto;
  opacity: 0.7;
}

/* 版本信息样式 */
.version-info {
  text-align: center;
  color: #999;
  font-size: 12px;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
} 