/* pages/mine/mine.wxss */

/* 容器样式 */
.container {
  padding: 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #ffffff;
  padding: 20px;
  width: 86%;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.user-info-wrapper {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 20px;
}

.avatar-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.avatar-wrapper {
  position: relative;
  width: 80px !important;
  height: 80px !important;
  padding: 0 !important;
  border-radius: 50%;
  overflow: hidden;
  background: none;
}

.avatar-wrapper::after {
  border: none;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.edit-avatar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 12px;
  text-align: center;
  padding: 2px 0;
}

/* 备用头像选择按钮 */
.avatar-fallback-btn {
  position: absolute;
  bottom: -30px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 12px;
  padding: 3px 8px !important;
  line-height: 1.5;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 10px;
  white-space: nowrap;
  min-width: auto !important;
}

.avatar-fallback-btn::after {
  border: none;
}

.user-detail {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 10px;
}

.user-name {
  font-size: 18px;
  font-weight: bold;
  margin-right: 10px;
  color: #333;
}

.welcome-text {
  font-size: 14px;
  color: #666;
}

.phone-section {
  margin-top: 5px;
}

.phone-number {
  font-size: 14px;
  color: #666;
}

.phone-btn {
  padding: 0 !important;
  font-size: 14px;
  color: #1296db;
  background: none;
  text-align: left;
  line-height: 1.5;
}

.phone-btn::after {
  border: none;
}

.login-btn {
  background-color: #1296db;
  color: #fff;
  font-size: 16px;
  padding: 8px 20px;
  border-radius: 20px;
  line-height: 1.5;
}

.login-btn::after {
  border: none;
}

/* 状态信息区域 */
.status-section {
  display: flex;
  background-color: #fff;
  padding: 15px 0;
  width: 96%;
  margin-top: -460px;
  margin-bottom: 15px;
  justify-content: space-around;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  position: relative;
}

.stuff {
  background-color: #e6f7ff;
  color: #1296db;
}

.welcome-icon {
  background-color: #f6ffed;
  color: #52c41a;
}

.verified-icon {
  background-color: #f6ffed;
  color: #52c41a;
}

.unverified-icon {
  background-color: #fff2e8;
  color: #fa8c16;
}

.status-number {
  position: absolute;
  top: -5px;
  right: -5px;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 12px;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-label {
  font-size: 14px;
  color: #666;
}


/* 版本信息 */
.version-info {
  text-align: center;
  padding: 20px 0;
  color: #999;
  font-size: 14px;
}

/* 测试按钮 - 隐藏 */
.test-button {
  position: fixed;
  bottom: 100px;
  right: 20px;
  background-color: rgba(0, 0, 0, 0.1);
  color: transparent;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  font-size: 0;
  z-index: 100;
} 