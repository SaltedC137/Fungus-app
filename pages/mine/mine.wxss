/* mine.wxss */
.container {
  padding: 0;
  font-size: 14px;
  color: #333;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 用户信息区域样式 */
.user-info-section {
  background: linear-gradient(to right, #1296db, #36c6d3);
  padding: 40rpx 30rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.2);
  position: relative;
  overflow: hidden;
}

.user-info-section::after {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  right: -100rpx;
  bottom: -100rpx;
}

.user-info-section::before {
  content: '';
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  left: 50rpx;
  top: -50rpx;
}

.user-info-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.user-name {
  margin-top: 20rpx;
  font-size: 18px;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  margin-top: 20rpx;
  background: transparent;
  border: 1px solid #fff;
  color: #fff;
  font-size: 14px;
  padding: 8rpx 30rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.login-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

/* 菜单区域样式 */
.menu-section {
  margin: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-list {
  padding: 0 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
  transition: background 0.3s;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #f5f5f5;
  color: #1296db;
}

.menu-icon.profile::before {
  content: "\e60c"; /* 使用字体图标，需要引入对应的字体文件 */
}

.menu-icon.settings::before {
  content: "\e60f";
}

.menu-icon.feedback::before {
  content: "\e611";
}

.menu-icon.about::before {
  content: "\e610";
}

.menu-text {
  flex: 1;
  font-size: 16px;
}

.menu-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.menu-item:active .menu-arrow {
  transform: rotate(45deg) translateX(4rpx);
}

/* 版本信息样式 */
.version-info {
  text-align: center;
  color: #999;
  font-size: 12px;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
} 