/**index.wxss**/
page {
  background-color: #f6f6f6;
}

/* Banner样式 */
.banner {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;  /* 使用负margin让通知栏上移 */
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}

.container {
  padding-bottom: 30rpx;
  padding-top: 0;
}

/* 通知信息条样式 */
.notification-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 87%;
  height: 45rpx;
  position: relative;
  z-index: 1;  /* 确保通知栏在上层 */
}

.notification-icon {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.notification-content {
  flex: 1;
  height: 80rpx;
  overflow: hidden;
  position: relative;
}

.marquee-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.marquee-text {
  white-space: nowrap;
  display: inline-block;
  position: absolute;
  animation: marquee linear infinite;
  animation-delay: 1s;
  height: 80rpx;
  line-height: 80rpx;
}

.marquee-item {
  font-size: 28rpx;
  color: #333;
  display: inline-block;
}

.marquee-separator {
  display: inline-block;
  color: #1296db;
  font-size: 28rpx;
  padding: 0 10rpx;
}

@keyframes marquee {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

.notification-more {
  font-size: 24rpx;
  color: #1296db;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 应用程序4*3布局样式 */
.apps-grid {
  background-color: #fff;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.apps-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.app-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.app-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
}

/* 搜索框样式 */
.search-box {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 87%;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 内容列表样式 */
.content-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #1296db;
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

.content-list {
  padding: 0 10rpx;
}

.content-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.content-item:last-child {
  border-bottom: none;
}

.content-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.content-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.content-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.content-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-date {
  font-size: 24rpx;
  color: #999;
}
