/* components/notification-item/notification-item.wxss */
.notification-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s;
}

.notification-item.read {
  opacity: 0.8;
}

.notification-item.animate {
  transform: scale(0.98);
  opacity: 0.9;
}

.notification-item.read::before {
  display: none;
}

.notification-item::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

.notification-content {
  display: flex;
}

.notification-type {
  min-width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 20rpx;
  color: #fff;
}


.mark-all-btn {
	font-size: 26rpx;
	color: #1296db;
	padding: 6rpx 20rpx;
	border: 1rpx solid #1296db;
	border-radius: 30rpx;
	transition: all 0.3s;
}

.mark-all-btn:active {
  background: rgba(18, 150, 219, 0.2);
  transform: scale(0.98);
}

.notification-type.system {
  background: #1296db;
}

.notification-type.activity {
  background: #ff9500;
}

.notification-info {
  flex: 1;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: #333;
}

.notification-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.notification-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  font-size: 26rpx;
  color: #1296db;
  padding: 6rpx 20rpx;
  border: 1rpx solid #1296db;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.action-btn:active {
  background: rgba(18, 150, 219, 0.1);
}